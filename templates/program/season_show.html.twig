{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- saison
	{{season.number}}
{% endblock %}

{% block body %}
	<main>
		<article class="movie-card my-5">
			<img src="{{ program.poster }}" alt="{{ program.title }}">
			<h1 class="mt-4">{{ program.title }}</h1>
			<div class="my-3 text-center">
				<h2 class="mt-3">Saison
					{{season.number}}</h2>
				{% for episode in season.episodes %}
					<div class="text-center my-4">
						<li class="mt-3 fs-4">Episode
							{{ episode.number }}
						</li>
						<li class="m-2">
							{{ episode.synopsis }}
						</li>
						<a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}" class="btn btn-light m-3 px-5">Voir l'épisode</a>
					</div>
				</div>

			{% else %}
				Aucun épisode trouvé
			{% endfor %}
		</article>

		<a href="{{ path("program_show", {id: program.id }) }}" class="btn btn-light m-3">Retour aux saisons</a>

		<a href="{{ path('program_index') }}" class="btn btn-light m-1">Retour à la liste des séries</a>
	</main>

{% endblock %}
