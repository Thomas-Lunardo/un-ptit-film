{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- saison
	{{season.number}}
{% endblock %}

{% block body %}
	<main>
		<article class="movie-card mt-5">
			<img src="{{ program.poster }}" alt="{{ program.title }}">
			<h1 class="mt-4">{{ program.title }}</h1>
			<div class="m-3 text-center">
				<h2 class="mt-3">Saison
					{{season.number}}</h2>

				<li class="mt-3">Episode
					{{ episode.number }}
				</li>
				<li class="mt-3">Episode
					{{ episode.title }}
				</li>
				<li class="m-2">
					{{ episode.synopsis }}
				</li>
			</div>
		</article>

		<a href="{{ path('program_season_show', {program: program.id, season: season.id}) }}" class="btn btn-light m-3 px-5">Retour à la saison</a>

		<a href="{{ path('program_index') }}" class="btn btn-light m-1 px-5">Retour à la liste des séries</a>
	</main>

{% endblock %}
