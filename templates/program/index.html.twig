{% extends 'base.html.twig' %}

{% block title %}Tous les films
{% endblock %}

{% block body %}
	<h1>Tous les films de la table program</h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<p>{{ program.synopsis }}</p>
			<a href="{{ path("program_show", {id: program.id }) }}">Détails du film</a>
		</div>
    {% else %}
        Aucun film trouvé en base de données
        {% endfor %}
    
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>

	{% endblock %}
