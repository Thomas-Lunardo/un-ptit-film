	<h1>Toutes les catégories de la table catégory</h1>
	{% for category in categories %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ category.name }}

			{# <a href="{{ path("category_show", {id: category.id }) }}">Voir les films</a> #}
		</div>
    {% else %}
        Aucune catégorie trouvé en base de données
        {% endfor %}
    
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>

	{% endblock %}
