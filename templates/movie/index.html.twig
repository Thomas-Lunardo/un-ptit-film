{% extends 'base.html.twig' %}

{% block title %}Tous les films
{% endblock %}

{% block body %}
	<main>
		<h1 class="text-center my-5">Tous les films disponibles</h1>
		<div class="container text-center">
			<div class="row">
				{% for movie in movies %}
					<div class="col movie-card">
						<img src="{{ movie.poster }}" class="card-img-top" alt="...">
						<div class="movie-card-body">
							<h5 class="card-title fs-1 mt-2">{{ movie.title }}</h5>
							<p class="card-text">{{ movie.synopsis }}</p>
							<p>Catégorie :
								{{ movie.category.name }}</p>
							<a href="{{ path("movie_show", {id: movie.id }) }}" class="btn btn-light m-3 px-5">Voir le film</a>
						</div>
					</div>

				{% else %}
					Aucun film trouvé en base de données
				{% endfor %}
			</div>
		</div>

		<a href="{{ path('app_index') }}" class="btn btn-light m-5 px-5">Retour à l'accueil</a>
	</main>

{% endblock %}
